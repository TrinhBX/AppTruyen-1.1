<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    xmlns:tool="http://schemas.android.com/tools"
    tool:context=".truyenchu.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:liftOnScroll="true">
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:id="@+id/navLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">
            <TextView
                android:id="@+id/txtMenuCategory"
                style="@style/headerMenu"
                android:drawableTop="@drawable/categorize_48"
                android:text="@string/categories"/>
            <TextView
                style="@style/headerMenu"
                android:drawableTop="@drawable/rank_48"
                android:text="Xếp hạng"/>
            <TextView
                style="@style/headerMenu"
                android:drawableTop="@drawable/filters_48"
                android:text="Bộ lọc"/>
            <TextView
                style="@style/headerMenu"
                android:drawableTop="@drawable/news_48"
                android:text="Tin tức"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/allStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/navLayout"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/allStoryHeader"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingHorizontal="15dp"
                android:weightSum="4"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtAllStory"
                    style="@style/storyListLabel"
                    android:text="TẤT CẢ TRUYỆN" />

                <ImageButton
                    android:id="@+id/btnChangeView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/column_view"
                    android:background="@color/white"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/listStory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/allStoryHeader"/>
        </RelativeLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/searchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="noScroll|enterAlways"
        app:title="Thư viện" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryBackground"
        app:menu="@menu/bottom_menu"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>